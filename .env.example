# Environment variables template
# Copy this file to .env and fill in your actual values

# Test Environment
TEST_ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:///test.db

# Test User Credentials
TEST_USERNAME=admin@example.com
TEST_PASSWORD=admin123

# API Configuration
API_BASE_URL=https://api.example.com
API_KEY=your_api_key_here

# Browser Configuration
DEFAULT_BROWSER=chrome
HEADLESS=false
BROWSER_TIMEOUT=10

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#test-results

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENTS=team@example.com,qa@example.com

# Performance Monitoring
PERFORMANCE_MONITORING=true
LIGHTHOUSE_API_KEY=your_lighthouse_key

# Security
ENCRYPTION_KEY=your_32_character_encryption_key

# Docker Configuration
SELENIUM_HUB_URL=http://localhost:4444/wd/hub

# CI/CD Configuration
CI_ENVIRONMENT=false
PARALLEL_WORKERS=2

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=reports/automation.log

# Visual Testing
VISUAL_TESTING_ENABLED=true
VISUAL_THRESHOLD=0.1

# Test Data
GENERATE_TEST_DATA=true
CLEANUP_TEST_DATA=true